double expt( double base, int power)
{

double answer = base;

if(power==0)
{
   return 1;
}
else if(power <0)
{
   power = -power
   for(int x = 0; x<power; x++)
      {
          answer = answer*base;
      }
      return 1/answer;
}
Else
{

}

      for(int x = 0; x<power; x++)
      {
          answer = answer*base;
      }
      return answer;

}



int main(void)
{
   double a = expt(2, 3);
   double b = expt(-3, 3);
   double c = expt(3, -4);
   return 0;
}
